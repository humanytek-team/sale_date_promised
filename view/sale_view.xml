<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_date_promised_form" model="ir.ui.view">
        <field name="name">sale.order.date.promised.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_dates.view_order_form_inherit_sale_stock_inherit_sale_order_dates"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='commitment_date']" position="after">
                <field name="date_promised"/>
            </xpath>
        </field>
    </record>

</odoo>